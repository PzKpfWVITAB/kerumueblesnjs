<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/darkly/bootstrap.min.css">
</head>

<body>
    <%- include('partials/header.ejs') %>
        <div class="container" style="margin-top: 20px;">
            <div class="row">
                <div class="col-md-8">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data.length> 0) { %>
                                <% data.forEach(cliente=> { %>
                                    <tr>
                                        <td>
                                            <%= cliente.id_cliente %>
                                        </td>
                                        <td>
                                            <%= cliente.nombre %>
                                        </td>
                                        <td>
                                            <%= cliente.correo %>
                                        </td>
                                        <td>
                                            <button href="/cltedit<%= cliente.id %>" type="button" class="btn btn-outline-warning">Editar</button>
                                            <button href="/cltdelete<%= cliente.id %>" type="button" class="btn btn-outline-danger">Eliminar</button>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="4">No hay clientes registrados</td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>

                </div>
                <div class="col-md-4">
                    <form action="/cltsave" method="POST">
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre">
                        </div>
                        <div class="form-group">
                            <label for="correo">Correo</label>
                            <input type="email" class="form-control" id="correo" name="correo" placeholder="Correo">
                        </div>
                        <div class="form-group">
                            <label for="contraseña">Contraseña</label>
                            <input type="password" class="form-control" id="contraseña" name="contraseña"
                                placeholder="Contraseña">
                        </div>
                        <div class="form-group">
                            <label for="direccion">Direccion</label>
                            <input type="text" class="form-control" id="direccion" name="direccion"
                                placeholder="Direccion">
                        </div>
                        <div class="form-group" style="margin-top: 20px;">
                            <button type="submit" class="btn btn-success">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>

        <%- include('partials/footer.ejs') %>
</body>

</html>